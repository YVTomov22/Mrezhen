DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/mrezhen_db?schema=public"

# Required by prisma.config.ts for migrations shadow database
# For local dev you can point this at a separate empty database.
SHADOW_DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/mrezhen_shadow?schema=public"

# Required for Auth.js / NextAuth
# Generate a value with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AUTH_SECRET="replace_with_a_random_64_char_hex_string"

# Application URL used to build password reset links
APP_URL="http://localhost:3000"

# SMTP settings for forgot-password email delivery
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="smtp_user"
SMTP_PASS="smtp_password"
SMTP_FROM="Mrezhen <no-reply@example.com>"

# Cloudinary (required for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# Python services (optional unless you use AI features)
PYTHON_BACKEND_URL="http://127.0.0.1:8000"
AI_JUDGE_URL="http://127.0.0.1:1234"