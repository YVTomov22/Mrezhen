generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String    @unique
  password      String?
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  passwordResetTokens PasswordResetToken[]

  bio           String?
  phone         String?
  accountType   String?   @default("personal")  // personal | creator | business
  isDeactivated Boolean   @default(false)

  // ── Privacy: Profile ──
  isPrivate              Boolean @default(false)
  whoCanSeePosts         String  @default("everyone")   // everyone | followers | nobody
  whoCanSeeFollowers     String  @default("everyone")   // everyone | followers | nobody

  // ── Privacy: Interactions ──
  whoCanComment          String  @default("everyone")   // everyone | followers | nobody
  whoCanRemix            String  @default("everyone")   // everyone | followers | nobody
  whoCanTagMe            String  @default("everyone")   // everyone | followers | nobody
  whoCanMessage          String  @default("everyone")   // everyone | followers | nobody

  // ── Privacy: Story / Content ──
  hiddenFromStory        String[] // user IDs hidden from stories
  closeFriends           String[] // user IDs on close-friends list
  allowResharing         Boolean @default(true)

  // ── Privacy: Discovery ──
  findableByEmail        Boolean @default(true)
  findableByPhone        Boolean @default(true)
  searchEngineIndexing   Boolean @default(true)

  // ── Appearance / Preferences ──
  theme                  String  @default("system")   // light | dark | system
  language               String  @default("en")       // ISO 639-1
  dataSaver              Boolean @default(false)
  autoplayVideos         Boolean @default(true)
  reduceMotion           Boolean @default(false)
  highContrast           Boolean @default(false)
  fontSize               String  @default("medium")   // small | medium | large | xlarge
  screenReader           Boolean @default(false)
  
  // Demographics
  dateOfBirth        DateTime?
  location           String?
  gender             String?
  education          String?
  maritalStatus      String?

  interests          String[]
  
  householdSize      Int?
  childrenCount      Int?
  socialSupportLevel String?
  
  childhoodMathSkill Int?
  booksInHome        String?
  
  // Health
  bmi                Float?
  smoking            String?
  alcoholConsumption String?
  mentalHealthScore  Int?
  
  // Work
  employmentStatus   String?
  incomePercentile   Int?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  score         Int       @default(0)
  level         Int       @default(1)
  
  milestones    Milestone[]
  quests        Quest[]

  followedBy    Follows[] @relation("following")
  following     Follows[] @relation("follower")

  activityLogs ActivityLog[]

  posts         Post[]
  postComments  PostComment[]
  postLikes     PostLike[]
  postBookmarks    PostBookmark[]
  postCommentLikes PostCommentLike[]

  // ── Battle System ──
  battlesAsChallenger  Battle[]           @relation("BattlesAsChallenger")
  battlesAsChallenged  Battle[]           @relation("BattlesAsChallenged")
  battlesWon           Battle[]           @relation("BattleWinner")
  battleDailyQuests    BattleDailyQuest[]
}

model Follows {
  followerId  String
  followingId String

  follower    User @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  following   User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@id([followerId, followingId])
}


model Milestone {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String?
  status      QuestStatus @default(IN_PROGRESS)
  progress    Float       @default(0)
  dueDate     DateTime?

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  quests      Quest[]

  // Battle references (milestone selected for a battle)
  battlesAsChallenger Battle[] @relation("BattleChallengerMilestone")
  battlesAsChallenged Battle[] @relation("BattleChallengedMilestone")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([userId, category])
}

model Quest {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String?
  difficulty  Difficulty @default(MEDIUM)
  status      QuestStatus @default(IN_PROGRESS)
  
  completionPoints Int @default(50)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  milestoneId String?
  milestone   Milestone? @relation(fields: [milestoneId], references: [id])

  tasks       Task[]

  completedAt DateTime?
  deadline    DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Task {
  id          String   @id @default(cuid())
  content     String
  isCompleted Boolean  @default(false)
  points      Int      @default(10)

  completedAt DateTime?

  questId     String
  quest       Quest    @relation(fields: [questId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  action    String   // e.g., "TASK_COMPLETE", "QUEST_COMPLETE"
  xpGained  Int
  createdAt DateTime @default(now())
}

enum QuestStatus {
  LOCKED
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
  EPIC
}

enum BattleStatus {
  PENDING     // Challenge sent, awaiting acceptance
  ACTIVE      // Both agreed, battle in progress
  COMPLETED   // 7-day period ended, winner resolved
  CANCELLED   // Challenger withdrew before acceptance
  DECLINED    // Challenged user declined
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  attachments Attachment[]

  senderId    String
  sender      User     @relation("SentMessages", fields: [senderId], references: [id])

  receiverId  String
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
}

model Attachment {
  id        String  @id @default(cuid())
  url       String
  messageId String
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
  @@id([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Post {
  id        String   @id @default(cuid())
  content   String?

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  images    PostImage[]
  comments  PostComment[]
  likes     PostLike[]
  bookmarks PostBookmark[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([createdAt])
}

model PostImage {
  id        String @id @default(cuid())
  url       String

  postId    String
  post      Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([postId])
}

model PostComment {
  id        String   @id @default(cuid())
  content   String

  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  parentId  String?
  parent    PostComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   PostComment[] @relation("CommentReplies")

  likes     PostCommentLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
}

model PostCommentLike {
  commentId String
  comment   PostComment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([commentId, userId])
  @@index([userId])
}

model PostLike {
  postId   String
  post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([postId, userId])
  @@index([userId])
}

model PostBookmark {
  postId   String
  post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([postId, userId])
  @@index([userId])
}

// ── 1v1 Battle System ──

model Battle {
  id              String       @id @default(cuid())

  challengerId    String
  challenger      User         @relation("BattlesAsChallenger", fields: [challengerId], references: [id], onDelete: Cascade)

  challengedId    String
  challenged      User         @relation("BattlesAsChallenged", fields: [challengedId], references: [id], onDelete: Cascade)

  // Each user picks their own milestone to battle over
  challengerMilestoneId String?
  challengerMilestone   Milestone? @relation("BattleChallengerMilestone", fields: [challengerMilestoneId], references: [id], onDelete: SetNull)

  challengedMilestoneId String?
  challengedMilestone   Milestone? @relation("BattleChallengedMilestone", fields: [challengedMilestoneId], references: [id], onDelete: SetNull)

  goalDescription String       // Shared goal both users agree on

  status          BattleStatus @default(PENDING)

  startDate       DateTime?    // Set when status -> ACTIVE
  endDate         DateTime?    // startDate + 7 days

  challengerXP    Int          @default(0)
  challengedXP    Int          @default(0)

  winnerId        String?      // Set on resolution (null = tie)
  winner          User?        @relation("BattleWinner", fields: [winnerId], references: [id], onDelete: SetNull)

  dailyQuests     BattleDailyQuest[]

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([challengerId])
  @@index([challengedId])
  @@index([status])
  @@index([endDate])
  @@index([challengerId, challengedId])
}

model BattleDailyQuest {
  id              String             @id @default(cuid())

  battleId        String
  battle          Battle             @relation(fields: [battleId], references: [id], onDelete: Cascade)

  userId          String
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  day             Int                // 1-7
  description     String             // What the user must do today

  proofText       String?            // Explanation of what was done
  proofImageUrl   String?            // Optional image proof

  verification    VerificationStatus @default(PENDING)
  xpAwarded       Int                @default(0)

  submittedAt     DateTime?
  verifiedAt      DateTime?
  verifiedById    String?            // The opponent who verified

  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@unique([battleId, userId, day])  // One quest per user per day per battle
  @@index([battleId])
  @@index([userId])
  @@index([battleId, userId])
  @@index([verification])
}